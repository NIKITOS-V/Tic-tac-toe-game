#:set main_layout_size_hint_y .8

<MenuScreen>
    GridLayout:
        rows: 3

        Widget:
            size_hint: 1, 1 - main_layout_size_hint_y

        AnchorLayout:
            size_hint: 1, main_layout_size_hint_y
            anchor_x: "center"
            anchor_y: "center"


            RelativeLayout
                id: PlayButtonLayout

                size_hint: .4, None

                on_size: self.height = self.width


        GridLayout:
            size_hint: 1, 1 - main_layout_size_hint_y

            cols: 3

            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"

                RelativeLayout:
                    id: SettingsButtonLayout
                    size_hint: .8, .8



            Widget:
            Widget: