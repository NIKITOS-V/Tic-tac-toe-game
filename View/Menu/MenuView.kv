#:set main_layout_size_hint_y .8

<MenuScreen>
    GridLayout:
        rows: 3

        Widget:
            size_hint: 1, 1 - main_layout_size_hint_y

        AnchorLayout:
            size_hint: 1, main_layout_size_hint_y
            anchor_x: "center"
            anchor_y: "center"

            AnchorLayout
                id: play_button_layout

                anchor_x: "center"
                anchor_y: "center"
                size_hint: .4, None

                on_size: self.height = self.width


        GridLayout:
            size_hint: 1, 1 - main_layout_size_hint_y
            cols: 3

            AnchorLayout:
                anchor_x: "center"
                anchor_y: "center"

                AnchorLayout:
                    id: settings_button_layout

                    anchor_x: "center"
                    anchor_y: "center"
                    size_hint: .8, .8

            Widget:
            Widget: